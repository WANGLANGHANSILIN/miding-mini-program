/* pages/table/tab1/tab1.wxss */
.near-pages-container {
  background: #f7f7f7;
}

.near-list-item {
  padding: 14rpx;
  background: white;
  margin: 10rpx 0;
}

.near-list-item-user-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 14rpx;
}
.user-info-avatar-image {
  border-radius:50%;
  width: 100rpx;
  height: 100rpx; 
}
.near-list-item-user-info-details{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  font-size: 14px;
  padding-left: 14rpx;
}

.iconfont{
  font-size: 12px;
}

.user-info-details-age{
  border-radius: 18rpx;
  background: pink;
  color: white;
  padding: 7rpx 21rpx;
  margin-left: 14rpx;
  text-align: center;
}

.icon-sexm{
  background: blue;
}

