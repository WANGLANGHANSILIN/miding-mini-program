.user-auth-pic{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.user-info-details-sendtime{
  padding: 1rpx 18rpx;
}
.user-info-details-sendtime::before{
  content: '·';
  margin: 0 10rpx;
}

.near-list-item-yue-ta{
  border-radius: 28rpx;
  background-color: #5caf3a;
  color: white;
  font-size: 14px;
  padding: 7rpx 21rpx;
  margin: 28rpx;
}

.near-list-item-text-descript {
  font-size: 14px;
  margin-top: 7rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.near-list-item-text-descript::after{
  content: '全文',
}

.near-list-item-text-title{
  font-size: 18px;
  color: #5caf3a;
  margin-top: 14rpx;
}

.near-list-item-zan-favorite{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.near-list-item-zan-favorite image {
  width: 30rpx;
  height: 30rpx;
}
.near-list-item-zan-favorite text{
  color: gray;
  font-size: 14px;
  margin-left: 7rpx;
}
.near-list-item-zan-favorite text:nth-child(2){
  margin: 10rpx 40rpx 10rpx 7rpx;
}

.near-list-item-meadia {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.near-list-item-meadia-image-single {
  width: 300rpx;
  height: 300rpx;
  margin-right: 7rpx;
}

.near-list-item-meadia-image-three {
  width: 33.3%;
  height: 220rpx;
  margin-right: 7rpx; 
}

.near-list-item-meadia-image-three image:last-child{
  border: 2px yellow solid;
  margin-right: none;
  background: red;
}

.near-pages-bottom {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 14rpx;
}