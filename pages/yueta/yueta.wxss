/* pages/yueta.wxss */
.container-yue-ta {
  background-color: #f7f7f7;
}

.container-yue-ta-header{
  background-color: white;
}

.container-yue-ta-header-back {
  position: relative;
  top: 0;
  left: 0;
  right: 0;
  padding: 14rpx 28rpx;
  box-sizing: border-box;
  z-index: 1;
  display:none;
}

.container-yue-ta-header-back image {
  position: relative;
  left: 0;
  width: 32rpx;
  height: 44rpx;
  padding: 0 4rpx;
  z-index: 3;
  box-sizing: border-box;
}

.container-yue-ta-header-back text {
  position: absolute;
  left: 0;
  right: 0;
  line-height: 44rpx;
  text-align: center;
}

.container-yue-ta-user-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 28rpx 28rpx 16rpx;
  border-bottom: 1rpx #d9d9d9 solid;
}

.container-yue-ta-user-info-avatar{
  position: relative;
  width: 128rpx;
  height: 144rpx;
  color: white;
}
.container-yue-ta-user-info-avatar image {
  width: 128rpx;
  height: 128rpx;
  border: 1rpx solid yellow;
  border-radius: 50%;
  
}

.container-yue-ta-user-info-avatar text {
  width: 64rpx;
  border-radius: 28rpx;
  background: gold;
  padding: 0rpx 7rpx;
  bottom: 0;
  margin: 0 25rpx;
  text-align: center;
  position: absolute;
  font-size: 12px;
}

.container-yue-ta-user-info-price-service{
  font-size: 16px;
  color: #ff5643;
}

.container-yue-ta-user-info-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-left: 28rpx;
}

.container-yue-ta-user-info-details text {
  font-size: 12px;
  color: #b3b3b3;
}

.container-yue-ta-user-info-details text:first-child{
  font-size: 16px;
  color: #262626;
}

.container-yue-ta-user-info-details text:nth-child(2){
  font-size: 12px;
  color: white;
  margin: 7rpx 0;
  padding: 0rpx 14rpx;
}

.container-yue-ta-refer-type {
  padding: 24rpx 28rpx;
  margin-left: 192rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.container-yue-ta-refer-type text{
  flex: 1;
  font-size: 12px;
  color: #999999;
  text-align: center;
}
.container-yue-ta-sub-title{
  font-size: 16px;
  color: #262626;
  margin: 16rpx 28rpx;
}
.content-subscribe-view{
  font-size: 14px;
  color: #999999;
  padding: 16rpx 28rpx;
  background: white;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.content-subscribe-view-target{
  color: #333333;
  flex: 1;
  text-align: end;
}

.content-subscribe-view image{
  width: 18rpx;
  height: 29rpx;
  margin-left: 28rpx;
}

/* 发布需求 */
.container-yue-ta-publish{
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 28rpx;
  color: #999999;
  font-size: 12px;
  box-sizing: border-box;
}
.container-yue-ta-publish-need{
  flex: 1;
  width: 89%;
  position: relative;
  border-radius: 48rpx;
  background-color: #5caf3a;
  color: white;
  text-align: center;
  font-size: 16px;
  margin: 56rpx 0rpx 16rpx;
  padding: 16rpx 0;
}
.container-yue-ta-publish-protocol{
  color: #27b4ff;
  margin-left: 8rpx;
}

/* 时间dialog */
.dialog-select-time{
  width: 100%;
  height: 100%;
  background: #eeeeee;
  position: absolute;
  bottom: 0;
  display: none;
}

.dialog-select-time .dialog-select-time-b{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 35%;
  background: gold;
  display: flex;
  flex-direction: row;
}

.dialog-select-time-b scroll-view{
  flex: 1;
  text-align: center;
}

.divider-line{
  height: 1px;
  width: 100%;
  background: #f7f7f7;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
